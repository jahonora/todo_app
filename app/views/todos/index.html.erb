
<div class="col-md-6">
	<h1>Index de ToDo</h1>
<% @todos.each do |todo| %>
	<div class="well">
		
		<div class="row">
			<div class="col-md-5">
				<h3><%= todo.description%></h3>
			</div>
			<div class="col-md-1">
				<br>
				<br>
				<div class="form-check">
					  <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" <%= "checked" if todo.completed %> disabled>
				</div>
			</div>
			<div class="col-md-2 well">
				<%= link_to "Ver", todo_path(todo) %>
				<%= link_to "Editar", edit_todo_path(todo) %>
				<%= link_to "Borrar", todo, method: :delete %>
			</div>
			<div class="col-md-3 well">
				<%= link_to "Completado", complete_todo_path(todo) %>
			</div>

		</div>
	</div>
<% end %>
</div>

<div class="col-md-6">
	<h2><%= link_to "Crear nuevo ToDo", new_todo_path %></h2>
</div>
